<Window x:Name="WindowMain" x:Class="SensingTex_PressureMat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SensingTex_PressureMat"
        mc:Ignorable="d"
        Title="Sensing Mat Recorder" Height="680" Width="800">
    <Canvas x:Name="pressureNodePanel" HorizontalAlignment="Left" Height="640" VerticalAlignment="Top" Width="640">
        <Label x:Name="comPortLabel" Content="COM:" Canvas.Left="644" Canvas.Top="21" Width="49" RenderTransformOrigin="0.043,0.55" FontSize="16"/>
        <Button x:Name="comPortConnectButton" Content="Connect" Canvas.Left="654" Canvas.Top="68" Width="121" Height="36" Click="comPortConnectButton_Click"/>
        <TextBox x:Name="comPortText" Height="30" Canvas.Left="698" TextWrapping="Wrap" Canvas.Top="21" Width="77" FontSize="20" TextAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="idTextBox" Height="19" Canvas.Left="673" TextWrapping="Wrap" Text="P1" Canvas.Top="151" Width="83" RenderTransformOrigin="1.78,0.609" TextAlignment="Center"/>
        <Label x:Name="idLabel" Content="Player ID:" Canvas.Left="685" Canvas.Top="119" Width="58" Height="27" RenderTransformOrigin="1.782,0.842"/>
    </Canvas>
</Window>
